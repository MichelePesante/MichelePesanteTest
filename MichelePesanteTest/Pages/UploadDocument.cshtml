@page
@model MichelePesanteTest.Pages.Tracker
@{
    ViewData["Title"] = "APIs";
}

<form method="post">
    <div class="form-group row">
        <div class="col">
            <label>JSON Document</label>
            <textarea class="form-control" required asp-for="DocumentPost" rows="8"></textarea>
        </div>
    </div>
    <button type="submit" asp-page-handler="upload">Submit</button>
    <div class="form-group row">
        <div class="col">
            <br>
            <label>Response</label>
            <textarea class="form-control" readonly rows="10"></textarea>
        </div>
    </div>
</form>