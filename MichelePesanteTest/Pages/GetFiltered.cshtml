@page "{handler?}"
@model MichelePesanteTest.Pages.Tracker
@{
    ViewData["Title"] = "APIs";
}

<form method="get">
    <div class="form-group row">
        <div class="col">
            <label>Select a date</label>
            <input type="date" class="form-control" required asp-for="@Model.TargetDate" />
        </div>
    </div>
    <button type="submit" asp-page-handler="filtered">Submit</button>
    <div class="form-group row">
        <div class="col">
            <br>
            @if (Model.TargetDate != null)
            {
            <label>Response from @Model.TargetDate?.ToString("dd/MM/yyyy") to @DateTime.Now.ToString("dd/MM/yyyy")</label>
            }
            <textarea class="form-control" readonly rows="18">@Model.Documents</textarea>
        </div>
    </div>
</form>