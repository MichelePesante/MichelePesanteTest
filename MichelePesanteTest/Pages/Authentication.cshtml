@page
@model MichelePesanteTest.Pages.AuthenticationModel
@{
    ViewData["Title"] = "APIs";
}

<form>
    <div class="form-group row">
        <div class="col-md-4">
            <label>ID</label>
            <input class="form-control" required type="text" id="id">
        </div>
        <div class="col-md-4">
            <label>Name</label>
            <input class="form-control" required type="text" id="name">
        </div>
        <div class="col-md-4">
            <label>Secret</label>
            <input class="form-control" required type="password" id="secret">
        </div>
    </div>
    <button type="submit">Submit</button>
    <div class="form-group row">
        <div class="col">
            <label>Response</label>
            <textarea class="form-control" readonly rows="8"></textarea>
        </div>
    </div>
</form>
