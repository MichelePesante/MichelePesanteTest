@page
@model MichelePesanteTest.Pages.AuthenticationModel
@{
    ViewData["Title"] = "APIs";
}

<form asp-page-handler="auth" method="post">
    <div class="form-group row">
        <div class="col-md-4">
            <label>ID</label>
            <input class="form-control" required type="text" asp-for="ID">
        </div>
        <div class="col-md-4">
            <label>Name</label>
            <input class="form-control" required type="text" asp-for="Name">
        </div>
        <div class="col-md-4">
            <label>Secret</label>
            <input class="form-control" required type="password" asp-for="Secret">
        </div>
    </div>
    <button type="submit">Submit</button>
    <div class="form-group row">
        <div class="col">
            <br>
            <label>Response</label>
            <textarea class="form-control" readonly rows="8">@Model.Result</textarea>
        </div>
    </div>
</form>
